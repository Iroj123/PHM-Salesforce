<apex:page standardController="Sale__c" renderAs="pdf">

    <!-- Pharmacy Header -->
    <h2 style="text-align:center;">MY PHARMACY</h2>
    <p style="text-align:center;">Medicine Sales Invoice</p>
    <hr/>

    <!-- Invoice Details -->
    <table width="100%" cellpadding="5">
        <tr>
            <td>
                <b>Invoice No:</b> {!Sale__c.Name}<br/>
                <b>Sale Date:</b> 
                <apex:outputText value="{0,date,dd/MM/yyyy}">
    <apex:param value="{!Sale__c.Sale_Date__c}" />
</apex:outputText>
            </td>
            <td align="right">
                <b>Customer:</b><br/>
                {!Sale__c.Customer__r.Name}
            </td>
        </tr>
    </table>

    <br/>

    <!-- Medicine Table -->
    <table border="1" width="100%" cellpadding="6" cellspacing="0">
        <tr>
            <th>Medicine</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Total Price</th>
        </tr>

        <apex:repeat value="{!Sale__c.Sale_Items__r}" var="si">
            <tr>
                <td>{!si.Medicine__r.Medicine_Name__c}</td>
                <td align="center">{!si.Quantity__c}</td>
                <td align="right">{!si.Unit_Price__c}</td>
                <td align="right">{!si.Total_Price__c}</td>
            </tr>
        </apex:repeat>
    </table>

    <br/>

    <!-- Grand Total -->
    <h3 style="text-align:right;">
        Grand Total: {!Sale__c.Total_Amount__c}
    </h3>

</apex:page>